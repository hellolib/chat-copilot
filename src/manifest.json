{
  "manifest_version": 3,
  "name": "Chat Copilot",
  "version": "0.13.1",
  "description": "AI 对话增强助手",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://grok.com/*",
    "https://*.qianwen.com/*",
    "https://chat.qwen.ai/*",
    "https://yiyan.baidu.com/*",
    "https://yuanbao.tencent.com/*",
    "https://chat.deepseek.com/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*",
        "https://*.qianwen.com/*",
        "https://chat.qwen.ai/*",
        "https://yiyan.baidu.com/*",
        "https://yuanbao.tencent.com/*",
        "https://chat.deepseek.com/*"
      ],
      "js": [
        "content/index.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/chat-copilot-btn-16.png",
      "32": "assets/chat-copilot-btn-32.png",
      "48": "assets/chat-copilot-btn-48.png",
      "128": "assets/chat-copilot-btn-128.png"
    },
    "default_title": "Chat Copilot"
  },
  "options_page": "options/index.html",
  "icons": {
    "16": "assets/chat-copilot-btn-16.png",
    "32": "assets/chat-copilot-btn-32.png",
    "48": "assets/chat-copilot-btn-48.png",
    "128": "assets/chat-copilot-btn-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/*.svg",
        "assets/*.svg",
        "assets/*.png",
        "assets/icons/*.png",
        "assets/icons/*.svg",
        "data/prompts/*.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
